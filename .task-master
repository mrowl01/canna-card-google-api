{
  "version": "0.27.3",
  "project": {
    "name": "Android-poc",
    "type": "android",
    "description": "Android push notifications proof of concept"
  },
  "rules": {
    "tasks": {
      "maxDepth": 3,
      "namingConvention": "descriptive",
      "requireDescription": true
    },
    "git": {
      "commitStyle": "conventional",
      "branchNaming": "feature/{task-id}-{description}"
    }
  },
  "ai": {
    "defaultProvider": "anthropic",
    "providers": {
      "anthropic": {
        "model": "claude-3-5-sonnet-20241022",
        "apiKey": "${ANTHROPIC_API_KEY}"
      }
    }
  },
  "preferences": {
    "autoSave": true,
    "confirmBeforeExecute": true,
    "showProgress": true
  }
}